<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Task List Js</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <div class="row my-2">
        <div class="col-md">
          <h3 class="text-center fw-bold text-uppercase">Login</h3>
          <hr />
        </div>
      </div>
    </div>
    <div class="container center-form">
      <div class="row my-2">
        <div class="col-md form-container w-100 d-flex justify-content-center">
          <form action="/login" method="post" style="width: 600px">
            <div class="mb-3">
              <label for="nama" class="form-label">Username</label>
              <input
                type="text"
                class="form-control"
                id="nama"
                name="username"
                placeholder="Username"
              />
            </div>
            <div class="mb-3">
              <label for="namaTugas">Password : </label>
              <input
                type="password"
                class="form-control"
                name="password"
                id="namaTugas"
                placeholder="Password"
              />
            </div>
            <div class="d-flex justify-content-center">
              <a href="/regis" class="btn btn-secondary me-2">Registrasi</a>
              <button type="submit" class="btn btn-primary">Login</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- Close Container -->

    <!-- Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
