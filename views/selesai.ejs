<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Task List Js</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
  
    <div class="container">
      <div class="row my-2">
        <div class="col-md">
          <h3 class="text-center fw-bold text-uppercase">
            Daftar Tugas Selesai
          </h3>
          <hr />
        </div>
      </div>

      <div class="row my-3">
        <div class="col-md">
          <table
            id="data"
            class="table table-striped table-responsive table-hover text-center"
            style="width: 100%"
          >
            <thead class="table-primary">
              <tr>
                <th>No</th>
                <th>Nama</th>
                <th>Tugas</th>
                <th>Waktu</th>
                <th>Menu</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach((datas, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= datas.nama %></td>
                <td><%= datas.namaTugas %></td>
                <td><%= datas.waktu %></td>
                <td>
                  <button
                    class="btn btn-danger btn-sm"
                    style="font-weight: 600"
                    onclick="hapus('<%= datas.id %>')"
                  >
                    <i class="bi bi-trash-fill"></i>&nbsp;Hapus
                  </button>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <script>
      function hapus(id) {
        fetch(`/selesai/${id}`, {
          method: "DELETE",
          headers: { "Content-Type": "application/json" },
        })
          .then(() => {
            window.location.reload();
          })
          .catch((err) => {
            console.error(err);
          });
      }
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
